<div id="login-page" class="main-area">
    <fieldset>
        <legend>Login page</legend>
        <form class="form-horizontal app-control" data-event="login" role="form">
            <div class="form-group">
                <label for="email" class="col-lg-2 control-label">E-mail</label>
                <div class="col-lg-5">
                    <input type="email" class="form-control" id="email" name="email" placeholder="email@address.com" required>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-lg-2 control-label">Password</label>
                <div class="col-lg-5">
                    <input type="password" class="form-control" id="password" name="password" placeholder="*******" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <button type="submit" class="btn btn-default app-control" data-event="show-signup">Signup</button>
                </div>
            </div>
        </form>
    </fieldset>
</div>

<div id="signup-page" class="main-area">
    <fieldset>
        <legend>Signup page</legend>
        <form class="form-horizontal app-control" data-event="signup" role="form">
            <div class="form-group">
                <label for="email" class="col-lg-2 control-label">E-mail</label>
                <div class="col-lg-5">
                    <input type="email" class="form-control" id="email" name="email" placeholder="email@address.com" required>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-lg-2 control-label">Password</label>
                <div class="col-lg-5">
                    <input type="password" class="form-control" id="password" name="password" placeholder="*******" required>
                </div>
            </div>
            <div class="form-group">
                <label for="confirmPassword" class="col-lg-2 control-label">Confirm password</label>
                <div class="col-lg-5">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="*******" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-default app-control" data-event="show-login">Cancel</button>
                    <button type="submit" class="btn btn-primary">Ok</button>
                </div>
            </div>
        </form>
    </fieldset>
</div>

<div id="home-page" class="main-area">
    <fieldset>
        <legend>Lord of The Series</legend>
        <p>One Place to rule them all, One Place to find them... One Place to ensure you never miss an episode of your favorite TV Series.</p>
        <form class="form-horizontal app-control" data-event="login" role="form">
            <div class="alert alert-danger" id="error" role="alert" style="display:none;"></div>
            <div class="form-group">
                <label for="seriesTitle" class="col-lg-2 control-label">Series title</label>
                <div class="col-lg-5">
                    <input type="text" class="form-control" id="seriesTitle" name="seriesTitle" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-primary app-control" data-event="search-series">Search</button>
                </div>
            </div>
        </form>
        <div id="search-results">
            <table class="table table-hover">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Overview</th>
                </tr>
            </table>
        </div>
    </fieldset>
</div>

<div id="series-detail" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title seriesName"></h4>
            </div>
            <div class="modal-body">
                <img class="banner">
                <p class="overview"></p>
                <p class="genre"></p>
                <p class="status"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Add to your collection</button>
            </div>
        </div>
    </div>
</div>