<div id="login-page" class="main-area">
  <fieldset>
    <legend>Login page</legend>
    <form class="form-inline app-control-submit" data-event="login" role="form">
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="email@address.com" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="*******" required>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
        <button type="submit" class="btn btn-default app-control" data-event="show-signup">Signup</button>
      </div>
    </form>
    <fieldset>
</div>

<div id="signup-page" class="main-area">
  <fieldset>
    <legend>Signup page</legend>
    <form class="form-horizontal app-control-submit" data-event="signup" role="form">
      <div class="form-group">
        <label for="email" class="col-lg-2 control-label">E-mail</label>
        <div class="col-lg-5">
          <input type="email" class="form-control" id="email" name="email" placeholder="email@address.com" required>
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-lg-2 control-label">Password</label>
        <div class="col-lg-5">
          <input type="password" class="form-control" id="password" name="password" placeholder="*******" required>
        </div>
      </div>
      <div class="form-group">
        <label for="confirmPassword" class="col-lg-2 control-label">Confirm password</label>
        <div class="col-lg-5">
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="*******" required>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <button type="submit" class="btn btn-default app-control" data-event="show-login">Cancel</button>
          <button type="submit" class="btn btn-primary">Ok</button>
        </div>
      </div>
    </form>
  </fieldset>
</div>

<div id="home-page" class="main-area">
  <h1>Lord of The Series</h1>
  <p>One Place to rule them all, One Place to find them... One Place to ensure you never miss an episode of your favorite TV Series.</p>

  <div class="alert alert-danger" id="error" role="alert" style="display:none;"></div>

  <form class="searchSeries">
    <input type="text" id="seriesTitle" name="seriesTitle" class="form-control" placeholder="Series title" required autofocus>
    <button class="btn btn-lg btn-primary" id="btnSearchSeries" type="submit">Search</button>
  </form>

  <div id="searchResults">
    <table class="table table-hover">
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Status</th>
        <th>Overview</th>
      </tr>
    </table>
  </div>
</div>

<div id="series-detail" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title seriesName"></h4>
      </div>
      <div class="modal-body">
        <img class="banner">
        <p class="overview"></p>
        <p class="genre"></p>
        <p class="status"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add to your collection</button>
      </div>
    </div>
  </div>
</div>