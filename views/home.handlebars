<div id="login-page" class="main-area hidden-area">
  <h1>Login page</h1>
  <form class="form-inline">
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="email@address.com" required autofocus>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="*******" required>
    </div>
    <button type="submit" class="btn btn-primary app-control" data-event="do-login">Login</button>
    <button type="submit" class="btn btn-default app-control" data-event="show-signup">Signup</button>
  </form>
</div>

<div id="signup-page" class="main-area hidden-area">
  <h1>Signup page</h1>

  <form class="login">
    <input type="text" id="seriesTitle" name="seriesTitle" class="form-control" placeholder="Series title" required autofocus>
    <input type="text" id="seriesTitle" name="seriesTitle" class="form-control" placeholder="Series title" required autofocus>

    <select class="form-control" id="select-language">
      <option value="">Select your language</option>
    </select>
    <button class="btn btn-lg btn-primary" id="btnSearchSeries" type="submit">Search</button>
  </form>
</div>

<div id="home-page" class="main-area hidden-area">
  <h1>Lord of The Series</h1>
  <p>One Place to rule them all, One Place to find them... One Place to ensure you never miss an episode of your favorite TV Series.</p>

  <div class="alert alert-danger" id="error" role="alert" style="display:none;"></div>

  <form class="searchSeries">
    <input type="text" id="seriesTitle" name="seriesTitle" class="form-control" placeholder="Series title" required autofocus>
    <button class="btn btn-lg btn-primary" id="btnSearchSeries" type="submit">Search</button>
  </form>

  <div id="searchResults" class="hidden-area">
    <table class="table table-hover">
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Status</th>
        <th>Overview</th>
      </tr>
    </table>
  </div>
</div>

<div id="series-detail" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title seriesName"></h4>
      </div>
      <div class="modal-body">
        <img class="banner">
        <p class="overview"></p>
        <p class="genre"></p>
        <p class="status"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add to your collection</button>
      </div>
    </div>
  </div>
</div>